<project default="runtest">
<taskdef resource="net/sf/antcontrib/antcontrib.properties"/>

<target name="init">
 
   <touch file="COPYBOOK3.cpy"/>   
  <sleep seconds="2"/>
   <touch file="FUNK.so"/>
    <touch file="LK1000.so"/>
  <touch file="FUNK.pco"/>
  <touch file="LK1000.pco"/>
 
    <touch file="COPYBOOK1.cpy"/> 

</target>

<target name="NISSE">
<outofdate>
          <sourcefiles>
            
            <filelist id="dot" dir="." files="FUNK.pco, COPYBOOK1.cpy, COPYBOOK3.cpy"/> 
          </sourcefiles>
          <targetfiles path="./FUNK.so"/>
          <sequential>
           <echo message="Some file(s) are newer than FUNK.so, start compile"/>
          </sequential>
</outofdate> 
</target>
         

<target name="runtest" 
  depends="init,  NISSE">
  <echo message="done"/>
</target>

</project>